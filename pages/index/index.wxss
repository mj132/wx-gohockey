.username{
  position: absolute;
  width: 100%;
  text-align: center;
  color: #2984FF; 
  bottom: -8rpx;
  font-size: 30rpx;
  line-height: 44rpx;
  letter-spacing: 0;
}

/* 选择冰场 */
.rink{
  padding: 60rpx 0;
}
.rink_title{
  margin-bottom: 40rpx;
}
.rink_title>view{
  position: relative;
}
.rink_title .rectangle{
  position: absolute;
  left: 0;
  top: 10rpx;
  width: 20rpx;
  height: 40rpx;
  background-color: #14144A;  
}
.rink_title text{
  margin-left: 40rpx;
  height: 56rpx;
  font-size: 40rpx;
  line-height: 56rpx;
}
.rink_pic{
  padding: 0 40rpx;
  margin-bottom: 100rpx;
}
.rink_img{
  position: relative;
  width: 200rpx;
  margin-right: 35rpx;
  padding-bottom: 40rpx;
}
.rink_img:nth-child(3n){
  margin-right: 0;
}
.rink_img image{
  width: 200rpx;
  height: 100rpx;
  border-radius: 6rpx;
}
.rink_img .rink_line{
  margin-top: 10rpx;
  width: 100%;
  height: 8rpx;
  background-color: #2984FF;
}
.rink_img.curr image{
  border-radius: 0;
  border: 4rpx solid #2984FF;
}
.rink_img.curr .rink_line{
  margin-top: 0;
  height: 16rpx;
  background: url('https://xiaochengxu.gogohockey.com/img/img_place_selected.png') no-repeat;
  background-size: 100% 100%;
}
.rink_text{
  width: 200rpx;
  display: inline-block;  
  font-size: 24rpx;
  color: #14144A;
  height: 34rpx;
  line-height: 34rpx;
  overflow: hidden;
  margin-top: 14rpx;
}

.rink_img.curr .rink_text{
  color: #2984FF;
}

/* 底部进入 */
.enter{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 112rpx;
  background: #FFF;
  box-shadow: 0 0 4px 0 rgba(39,135,255,0.20);
}
.enter .link{
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -170rpx;
  margin-top: -41rpx;
  width: 340rpx;
  height: 82rpx;
  background: #2984FF;
  border-radius: 100px;
  text-align: center;
  font-size: 32rpx;
  color: #FFF;
  line-height: 82rpx;
}