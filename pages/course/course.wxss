/* pages/course/course.wxss */
/* @import "../../template"; */


.top_select{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  z-index: 99;
}
.top_select .address{
  width: 130rpx;
  height: 52rpx;
  margin-top: 14rpx;  
  border: 1px solid #C7E4FF;
  border-radius: 100px;
  margin-left: 36rpx;
  text-align: center;
  overflow: hidden; 
}
.address image{
  width: 18rpx;
  height: 24rpx;
  margin: 15rpx;
}
.address .picker{
  /* width: 95rpx; */
  height: 52rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 52rpx;
}
.rink{
  height: 56rpx;
  padding-top: 14rpx;  
  position: absolute;
  left: 50%;
  top: 0;
  font-size: 40rpx;
  color: #14144A;
}
.rink .r{
  position: relative;
  margin-left: -50%;
}
.rink_text{
  white-space: nowrap;
  text-overflow: hidden;
}
.rink image{
  width: 28rpx;
  height: 14rpx;
  margin-top: 20rpx;
  margin-left: 10rpx;
}

.calendar{
  margin-top: 76rpx;
  width: 100%;
  height: 290rpx;
}
.calendar .calendar_show{
  width: 100%;
  height: 290rpx; 
  background: url(http://xiaochengxu.gogohockey.com/img/bg_schedule.png) no-repeat;
  background-size: 100% 290rpx;
}
.calendar_title,.calendar_year{
  font-size: 22rpx;
  color: #94CBFF;
  text-align: center;
}
.calendar_title{
  padding-top: 54rpx;
}
.calendar_date,.calendar_week{
  margin-left: 60rpx;
}
.calendar_date>view,.calendar_week .week{
  width: 76rpx;
  height: 76rpx;
  font-size: 40rpx;
  text-align: center;
  line-height: 76rpx;
  color: #fff;
  margin-right: 16rpx; 
}
.calendar_date>view.curr{
  background: #FFFFFF;
  border-radius: 50%;
  box-shadow: inset 0 0 4px 0 rgba(0,127,255,0.50); 
  color: #2984FF;
}
.calendar_week .week{
  line-height: 55rpx;
  font-size: 28rpx;
  color: #94CBFF;
}

.course_reg{
  padding: 0 70rpx 100rpx 72rpx;
  text-align: center;
}
.course_reg .course{
  position: relative;
  width: 608rpx;
  height: 220rpx;
  margin-bottom: 32rpx;
  background: url(http://xiaochengxu.gogohockey.com/img/bg_classes.png) no-repeat;
  background-size: 100% 100%;
}
.course .time{
  width: 100%;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 26rpx;
  color: #fff; 
  text-align: center;
}
.course_title{
  width: 100%;
  height: 34rpx;
  line-height: 34rpx;
  font-size: 28rpx;
  color: #14144A;
  letter-spacing: 1.86rpx;
  text-align: center;
  margin-top: 18rpx;
  overflow: hidden;
}
.coach{
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  font-size: 22rpx;
  color: #50638F;
  letter-spacing: 1.4rpx;
  margin-top: 6rpx;
}
.coach .coach_name{
  margin-right: 20rpx;
}
.user{
  width: 440rpx;
  height: 58rpx;
  overflow: hidden;
  padding-left: 10rpx;
  margin: 12rpx auto;
  text-align: left;
}
.user image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin: 0 10rpx;
}
.signup{
  position: absolute;
  right: 0;
  top: 50%;
  margin-top: -18rpx;
  width: 120rpx;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 26rpx;
  text-align: center;
  color: #fff;
  background: #2984FF;
  border-radius: 200rpx;
}
.signup.over{
  background: #94CBFF;
}
.signup.full{
  background: #94CBFF;
}
.nocourse{
    width: 100%;
    height: 800rpx;
    /* background: #000; */
    text-align: center;
    font-size: 32rpx;
    color: #D4D4D4;
    padding-top: 100rpx;
    /* margin-top: 100rpx; */
}
.contact{
     width: 100rpx;
     height: 100rpx;
     position: fixed;
     bottom: 320rpx;
     right: 20rpx;
     border-radius: 50%;
     text-align: center;
     font-size: 22rpx;
     padding: 0;
     margin: 0;
     color: #2984FF;
     box-shadow: 0 5rpx  20rpx #dbdbdb;
     padding-top: 45rpx;
}
.contact::after{
     border: none;
}