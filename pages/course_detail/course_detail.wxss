/* pages/course_detail/course_detail.wxss */
.course_detail{
  position: relative;
  width: 100%;
  height: 100%;
  margin-top: 60rpx;
}
.asideline{
  position: absolute;
  top: 0;
  bottom: 0;
  right: 13rpx;
  width: 8rpx;
  background: #2984FF;
}

.my_sign{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 112rpx;
  background: #FFF;
  box-shadow: 0 0 4px 0 rgba(39,135,255,0.20);
  z-index: 99;
}
.my_sign .sign{
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -41rpx;
  margin-left: -170rpx; 
  width: 340rpx;
  height: 82rpx;
  background-color: #2984FF;
  border-radius: 200rpx;
  font-size: 32rpx;
  color: #FFF;
  line-height: 82rpx;
  text-align: center;
}

.course_img{
  position: relative;
}
.course_img image{
  width: 700rpx;
  height: 300rpx;
}
.course_img .bg{
  position: absolute;
  left: 0;
  bottom: -30rpx;
